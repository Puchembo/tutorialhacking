<%= simple_form_for @article do |f| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">

      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :title %><br>
  <%= f.input :text %>
  <%= f.button :submit %>

<% end %>